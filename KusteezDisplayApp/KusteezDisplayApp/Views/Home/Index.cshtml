@using KusteezDisplayApp.Models;
@model IList<KusteezDisplayApp.Models.FormInformation>;
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css?v=1" />

<div class="informationTable">

    <div class="tableTitle"><h2>Orders</h2></div>
    <table border="1" class="displayTable " >
        <tr>
            <th>Order ID</th>
            <th>Gamer Tag</th>
            <th>Clothing</th>
            <th>Size</th>
            <th>Print Color</th>
            <th>Status</th>
        </tr>
       @foreach (var info in Model)
       {
            <tr>
                <td>@info.orderID</td>
                <td>@info.gamerTag</td>
                <td>@info.clothingType</td>
                <td>@info.size</td>
                <td>@info.printColor</td>
                <td>@info.status</td>
            </tr>
       }
    </table>
    
    <button type="submit" style="margin-left: 45%;" value="Confirm">CONFIRM</button>
</div>




