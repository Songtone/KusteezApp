@using KusteezDisplayApp.Models;
@*@model IList<KusteezDisplayApp.Models.FormInformation>;*@
@model FormInformation;
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css?v=2" />

<div class="informationTable">

    <div class="tableTitle"><h2>Orders</h2></div>
    <table border="1" class="displayTable ">
        <tr>
            <th>Status</th>
            <th>Order ID</th>
            <th>Gamer Tag</th>
            <th>Clothing</th>
            <th>Size</th>
            <th>Print Color</th>
            <th>Price</th>
            <th>Front Of Jersey</th>
            <th>Left Sleeve Of Jersey</th>
            <th>Right Sleeve Of Jersey</th>
            <th>Top Back Of Jersey</th>
            <th>Bottom Back</th>
        </tr>
        @foreach (FormInformation info in Model.OrdersList)
        {
            <tr>
                <td>@info.status</td>
                <td>@info.orderID</td>
                <td>@info.gamerTag</td>
                <td>@info.clothingType</td>
                <td>@info.size</td>
                <td>@info.printColor</td>
                <td>@info.finalCost</td>
                <td>@info.frontJersey</td>
                <td>@info.leftSleeveJersey</td>
                <td>@info.rightSleeveJersey</td>
                <td>@info.topBackJersey</td>
                <td>@info.bottomBackJersey</td>
            </tr>
        }
    </table>

   
</div>

<div class="completedSection">
    @using (Html.BeginForm("Confirm", "Home", FormMethod.Post))
    {
        <h4>Enter an Order ID that is completed</h4>
        <div class="editor-field">
            @Html.EditorFor(model => model.completedID)
        </div>
    <br/>
        <button type="submit"  value="Confirm">CONFIRM</button>
    }
</div>




